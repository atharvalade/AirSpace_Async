{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "declaration": true,
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "*": ["node_modules/*", "types/*"]
    }
  },
  "include": [
    "./scripts",
    "./test",
    "./services",
    "./types/**/*"
  ],
  "files": ["./hardhat.config.js"]
} 